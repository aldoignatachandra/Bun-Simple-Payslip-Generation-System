{
  "name": "bun-employee-management",
  "version": "1.0.0",
  "description": "technical test - employee management",
  "author": "aldo ignata chandra",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prepare": "husky install",
    "preinstall": "bunx only-allow bun",
    "lint": "eslint \"src/**/*.ts\"",
    "migrate": "bun src/migrate.ts",
    "start": "bun src/index.ts",
    "dev": "bun --watch src/index.ts",
    "test": "NODE_ENV=test bun test ./test/**/*.test.ts",
    "test:coverage": "rm -rf coverage && mkdir -p coverage/tmp && NODE_ENV=test bun test ./test/**/*.test.ts --coverage && bunx c8 --all --include=\"src/**/*.ts\" report --reporter=text --reporter=html --reporter=lcov",
    "coverage:report": "bunx c8 report --reporter=text-lcov > coverage.lcov && bunx codecov",
    "coverage:view": "open coverage/index.html"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@types/bun": "latest",
    "@types/chai": "^5.2.2",
    "@types/luxon": "^3.6.2",
    "@types/mocha": "^10.0.10",
    "@types/morgan": "^1.9.9",
    "@types/sinon": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "c8": "^10.1.3",
    "chai": "^5.2.0",
    "codecov": "^3.8.3",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "mocha": "^11.6.0",
    "prettier": "^3.5.3",
    "sinon": "^20.0.0",
    "ts-node": "^10.9.2"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.3",
    "bcryptjs": "^3.0.2",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.5.0",
    "hono": "^4.7.11",
    "husky": "^9.1.7",
    "luxon": "^3.6.1",
    "morgan": "^1.10.0",
    "pg": "^8.16.0",
    "winston": "^3.17.0",
    "zod": "^3.25.55"
  },
  "c8": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "coverage/**",
      "test/**",
      "dist/**",
      "**/*.spec.ts",
      "**/*.test.ts",
      "**/node_modules/**"
    ],
    "reporter": [
      "html",
      "text",
      "lcov"
    ],
    "all": true,
    "check-coverage": true,
    "branches": 80,
    "lines": 80,
    "functions": 80,
    "statements": 80,
    "reportsDirectory": "./coverage"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=20.0.0"
  }
}
